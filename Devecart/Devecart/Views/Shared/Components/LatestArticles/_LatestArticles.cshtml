@model List<Article>


<section class="latest-blog-section p-3 p-lg-5">
    <div class="container">
        <h2 class="section-title font-weight-bold mb-5"></h2>
        <div class="row">
            @foreach (var artile in Model)
            {
                <div class="col-md-4 mb-5">
                    <div class="card blog-post-card">
                        <img class="card-img-top" src="~/assets/images/blog/@artile.Image" alt="@artile.Title"title="@artile.Description">
                        <div class="card-body">
                            <h5 class="card-title">
                                @artile.Title
                                <a class="theme-link" href="blog-post.html">
                                </a>
                            </h5>
                            <p class="card-text">
                                @artile.Description
                            </p>
                            <p class="mb-0"><a class="more-link" href="#"></a></p>

                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</section>